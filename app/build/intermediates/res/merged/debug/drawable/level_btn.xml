<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#fafafa" />
            <gradient android:angle="-90" android:startColor="#0f72c2"
                android:centerColor="#286ddc"
                android:endColor="#0c74c7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#fafafa" />
            <solid android:color="#fafafa"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#fafafa" />
            <gradient android:angle="-90"
                android:startColor="#0c7eda"
                android:centerColor="#407ee2"
                android:endColor="#0184ec" />
        </shape>
    </item>
</selector>