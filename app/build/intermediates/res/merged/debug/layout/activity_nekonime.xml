<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b6f1c6"
    android:orientation="vertical"
    tools:context=".Nekonime">

    <Button
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_close"
        android:text="x"
        android:textStyle="bold"
        android:id="@+id/close_iklan"
        android:textColor="#fff"
        android:layout_gravity="right"

        android:layout_width="35dp"
        android:layout_height="35dp" />
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            >

            <ImageView
                android:id="@+id/nekotowebl"
                android:src="@drawable/nekonime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/nekotowebt"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:textStyle="italic"
                android:text="Download Anime di nekonime.com . cepat, mudah, lengkap dan kualitas HD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/nekotoweb"
                android:src="@drawable/nekoweb"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>
    </ScrollView>
</LinearLayout>
